<Page x:Class="Petrov_122.Pages.AddCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Petrov_122.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddCategoryPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Название категории - по центру -->
        <TextBlock Text="Название категории" 
                   Grid.Row="1" Grid.Column="1" 
                   FontSize="20" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,15"/>

        <TextBox x:Name="TBCategoryName" 
                 Grid.Row="2" Grid.Column="1" 
                 Margin="0,0,0,50" 
                 Text="{Binding Name}" 
                 Height="30" 
                 Width="300" 
                 HorizontalAlignment="Center"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top"
                    Margin="0,20,0,0">
            <Button x:Name="ButtonSaveCategory" 
                    Content="Сохранить" 
                    Click="ButtonSaveCategory_Click" 
                    Width="120" 
                    Height="35" 
                    Margin="10,0"/>
            <Button x:Name="ButtonClean" 
                    Content="Очистить" 
                    Click="ButtonClean_Click" 
                    Width="120" 
                    Height="35" 
                    Margin="10,0"/>
        </StackPanel>
    </Grid>
</Page>