<Page x:Class="Petrov_122.Pages.AddPaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Petrov_122.Pages"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление платежа">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Название платежа -->
        <TextBlock Text="Название платежа:"
                   Grid.Row="0" Grid.Column="0"
                   FontSize="14" 
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"
                   FontWeight="SemiBold"/>

        <TextBox x:Name="TBPaymentName" 
                 Grid.Row="0" Grid.Column="1"
                 Margin="0,0,0,0"
                 Text="{Binding Name}" 
                 Height="30" 
                 Padding="5"
                 FontSize="14"
                 VerticalAlignment="Center"/>

        <!-- Сумма -->
        <TextBlock Text="Сумма:"
                   Grid.Row="2" Grid.Column="0"
                   FontSize="14"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"
                   FontWeight="SemiBold"/>

        <TextBox x:Name="TBAmount" 
                 Grid.Row="2" Grid.Column="1"
                 Margin="0,0,0,0"
                 Text="{Binding Price}" 
                 Height="30"
                 Padding="5"
                 FontSize="14"
                 VerticalAlignment="Center"/>

        <!-- Количество -->
        <TextBlock Text="Количество:"
                   Grid.Row="4" Grid.Column="0"
                   FontSize="14"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"
                   FontWeight="SemiBold"/>

        <TextBox x:Name="TBCount" 
                 Grid.Row="4" Grid.Column="1"
                 Margin="0,0,0,0"
                 Text="{Binding Num}" 
                 Height="30"
                 Padding="5"
                 FontSize="14"
                 VerticalAlignment="Center"/>

        <!-- Дата и время -->
        <TextBlock Text="Дата и время:"
                   Grid.Row="6" Grid.Column="0"
                   FontSize="14"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"
                   FontWeight="SemiBold"/>

        <!-- MaskedTextBox из Extended WPF Toolkit -->
        <xctk:MaskedTextBox x:Name="TBDateTime"
                 Grid.Row="6" Grid.Column="1"
                 Value="{Binding Date}"
                 Height="30"
                 Padding="5"
                 FontSize="14"
                 VerticalAlignment="Center"
                 Mask="00.00.0000 00:00"
                 PromptChar="_"
                 ToolTip="Формат: дд.мм.гггг чч:мм"/>

        <!-- Клиент -->
        <TextBlock Text="Клиент:"
                   Grid.Row="8" Grid.Column="0"
                   FontSize="14"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"
                   FontWeight="SemiBold"/>

        <ComboBox x:Name="CBUser" 
                  Grid.Row="8" Grid.Column="1"
                  Margin="0,0,0,0"
                  SelectedValuePath="ID" 
                  SelectedValue="{Binding Path=UserID}" 
                  Height="30"
                  Padding="5"
                  FontSize="14"
                  VerticalAlignment="Center"/>

        <!-- Категория -->
        <TextBlock Text="Категория:"
                   Grid.Row="10" Grid.Column="0"
                   FontSize="14"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"
                   FontWeight="SemiBold"/>

        <ComboBox x:Name="CBCategory" 
                  Grid.Row="10" Grid.Column="1"
                  Margin="0,0,0,0"
                  SelectedValuePath="ID" 
                  SelectedValue="{Binding Path=CategoryID}" 
                  Height="30"
                  Padding="5"
                  FontSize="14"
                  VerticalAlignment="Center"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">

            <Button x:Name="ButtonSave" 
                    Content="Сохранить" 
                    Click="ButtonSave_Click" 
                    Width="120" 
                    Height="35" 
                    Margin="10,0"
                    FontSize="14"/>

            <Button x:Name="ButtonClean" 
                    Content="Очистить" 
                    Click="ButtonClean_Click" 
                    Width="120" 
                    Height="35" 
                    Margin="10,0"
                    FontSize="14"/>
        </StackPanel>
    </Grid>
</Page>