<Page x:Class="Petrov_122.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Petrov_122.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Логин:"
                       Grid.Row="0" Grid.Column="0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,10,10"/>
                <Grid Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                    <TextBox x:Name="txtbxLog"
                             Background="Transparent"
                             ToolTip="Введите логин или почту"
                             TextWrapping="Wrap"
                             Height="29"
                             TextChanged="txtbxLog_TextChanged" />
                    <Label x:Name="lblLogHitn"
                           Foreground="Gray"
                           Content="Введите логин"
                           VerticalAlignment="Center"
                           MouseLeftButtonUp="lblLogHitn_MouseLeftButtonUp" />
                </Grid>

                <Label Content="Пароль:"
                       Grid.Row="1" Grid.Column="0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,10,10"/>
                <Grid Grid.Row="1" Grid.Column="1" Margin="0,0,0,10">
                    <PasswordBox x:Name="passBxFrst"
                                 Background="Transparent"
                                 ToolTip="Введите пароль"
                                 Height="33"
                                 PasswordChanged="passBxFrst_PasswordChanged" />
                    <Label x:Name="lblPassHitn"
                           Foreground="Gray"
                           Content="Введите пароль"
                           VerticalAlignment="Center"
                           MouseLeftButtonUp="lblPassHitn_MouseLeftButtonUp" />
                </Grid>

                <Label Content="Подтвердите пароль:"
                       Grid.Row="2" Grid.Column="0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,10,10"/>
                <Grid Grid.Row="2" Grid.Column="1" Margin="0,0,0,10">
                    <PasswordBox x:Name="passBxScnd"
                                 Background="Transparent"
                                 ToolTip="Повторите пароль"
                                 Height="33"
                                 PasswordChanged="passBxScnd_PasswordChanged" />
                    <Label x:Name="lblPassSecHitn"
                           Foreground="Gray"
                           Content="Повторите пароль"
                           VerticalAlignment="Center"
                           MouseLeftButtonUp="lblPassSecHitn_MouseLeftButtonUp" />
                </Grid>

                <Label Content="ФИО:"
                       Grid.Row="3" Grid.Column="0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,10,10"/>
                <Grid Grid.Row="3" Grid.Column="1" Margin="0,0,0,10">
                    <TextBox x:Name="txtbxFIO"
                             Background="Transparent"
                             ToolTip="Введите ФИО"
                             TextWrapping="Wrap"
                             Height="43"
                             TextChanged="txtbxFIO_TextChanged" />
                    <Label x:Name="lblFioHitn"
                           Foreground="Gray"
                           Content="Введите ФИО"
                           VerticalAlignment="Center"
                           MouseLeftButtonUp="lblFioHitn_MouseLeftButtonUp" />
                </Grid>

                <Label Content="Роль:"
                       Grid.Row="4" Grid.Column="0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,10,10"/>
                <ComboBox x:Name="comboBxRole"
                          Grid.Row="4" Grid.Column="1"
                          ToolTip="Выберите роль"
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          Height="37"
                          Margin="0,0,0,20">
                    <ComboBoxItem Content="User" />
                    <ComboBoxItem Content="Admin" />
                </ComboBox>

                <Button x:Name="regButton"
                        Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                        Content="Зарегистрироваться"
                        HorizontalAlignment="Center"
                        Width="170"
                        Height="35"
                        Click="regButton_Click" />

            </Grid>
        </StackPanel>
    </Grid>
</Page>