<Page x:Class="Petrov_122.Pages.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Petrov_122.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление пользователя">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Логин -->
        <TextBlock Text="Логин:"
                   Grid.Row="0" Grid.Column="0"
                   VerticalAlignment="Center"
                   FontSize="14"/>

        <TextBox x:Name="TBLogin"
                 Text="{Binding Login}"
                 Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                 Height="30"
                 Padding="5"
                 FontSize="14"
                 ToolTip="Введите логин"/>

        <!-- Пароль -->
        <TextBlock Text="Пароль:"
                   Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center"
                   FontSize="14"/>

        <TextBox x:Name="TBPass"
                 Text="{Binding Password}"
                 Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                 Height="30"
                 Padding="5"
                 FontSize="14"
                 ToolTip="Введите пароль"/>

        <!-- Роль -->
        <TextBlock Text="Роль:"
                   Grid.Row="4" Grid.Column="0"
                   VerticalAlignment="Center"
                   FontSize="14"/>

        <ComboBox Name="cmbRole"
                  SelectedItem="{Binding Role}"
                  Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                  Height="30"
                  Padding="5"
                  FontSize="14"
                  ToolTip="Выберите роль"
                  VerticalContentAlignment="Center">
            <ComboBoxItem Content="Admin" />
            <ComboBoxItem Content="User" />
        </ComboBox>

        <!-- ФИО -->
        <TextBlock Text="ФИО:"
                   Grid.Row="6" Grid.Column="0"
                   VerticalAlignment="Center"
                   FontSize="14"/>

        <TextBox x:Name="TBFio"
                 Text="{Binding FIO}"
                 Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2"
                 Height="30"
                 Padding="5"
                 FontSize="14"
                 ToolTip="Введите ФИО"/>

        <!-- Фото -->
        <TextBlock Text="Фото:"
                   Grid.Row="8" Grid.Column="0"
                   VerticalAlignment="Center"
                   FontSize="14"/>

        <StackPanel Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2"
                    Orientation="Vertical">
            <TextBox x:Name="TBPhoto"
                     Text="{Binding Photo}"
                     Height="30"
                     Padding="5"
                     FontSize="14"
                     ToolTip="Путь к файлу фото"/>
            <TextBlock Text="(необязательно)"
                       FontSize="12"
                       Foreground="Gray"
                       Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">

            <Button x:Name="ButtonClean"
                    Content="Очистить"
                    Click="ButtonClean_Click"
                    Width="120"
                    Height="35"
                    Margin="0,0,20,0"
                    FontSize="14"/>

            <Button x:Name="ButtonSave"
                    Content="Сохранить"
                    Click="ButtonSave_Click"
                    Width="120"
                    Height="35"
                    FontSize="14"/>
        </StackPanel>
    </Grid>
</Page>