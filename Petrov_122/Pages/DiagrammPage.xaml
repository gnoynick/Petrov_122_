<Page x:Class="Petrov_122.Pages.DiagrammPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Petrov_122.Pages"
      xmlns:charts="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DiagrammPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель с элементами управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5" VerticalAlignment="Top">
            <TextBlock Text="Пользователь:" VerticalAlignment="Center" Margin="5,0"/>
            <ComboBox x:Name="CmbUser" DisplayMemberPath="FIO" Width="200" Margin="5,0" VerticalContentAlignment="Center"
                      SelectionChanged="UpdateChart"/>

            <TextBlock Text="Тип диаграммы:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <ComboBox x:Name="CmbDiagram" Width="150" Margin="5,0"  VerticalContentAlignment="Center"
                      SelectionChanged="UpdateChart"/>

            <Button x:Name="BtnExportExcel" Content="Excel" Width="120" Margin="20,0,5,0"
                    Click="BtnExportExcel_Click"/>
            <Button x:Name="BtnExportWord" Content="Word" Width="120" Margin="5,0"
                    Click="BtnExportWord_Click"/>
        </StackPanel>
        <WindowsFormsHost HorizontalAlignment="Left" Height="100" Margin="210,150,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100"/>

        <!-- Область для диаграммы -->
        <WindowsFormsHost Grid.Row="1" Margin="5">
            <charts:Chart x:Name="ChartPayments">
                <charts:Chart.Legends>
                    <charts:Legend/>
                </charts:Chart.Legends>
            </charts:Chart>
        </WindowsFormsHost>
    </Grid>
</Page>