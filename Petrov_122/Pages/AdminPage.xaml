<Page x:Class="Petrov_122.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Petrov_122.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">
    <Grid>
        <Border  CornerRadius="10"  Margin="50" Padding="20" BorderThickness="1" VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="BtnTab1" 
                            Content="Пользователи" 
                            Grid.Row="0" Grid.Column="0"
                            Height="80" 
                            Margin="10"
                            BorderThickness="0"
                            Click="BtnTab1_Click" FontSize="14" FontFamily="Segoe UI">
                    </Button>

                    <Button x:Name="BtnTab2" 
                            Content="Категории" 
                            Grid.Row="0" Grid.Column="1"
                            Height="80" 
                            Margin="10"
                            FontSize="12"
                            BorderThickness="0"
                            Click="BtnTab2_Click">
                    </Button>

                    <Button x:Name="BtnTab3" 
                            Content="Платежи" 
                            Grid.Row="0" Grid.Column="2"
                            Height="80" 
                            Margin="10"
                            FontSize="14"
                            BorderThickness="0"
                            Click="BtnTab3_Click" FontFamily="Segoe UI">
                    </Button>

                    <Button x:Name="BtnTab4" 
                            Content="Диаграммы" 
                            Grid.Row="1" Grid.Column="1"
                            Height="80" 
                            Margin="10"
                            FontSize="14"
                            BorderThickness="0"
                            Click="BtnTab4_Click" FontFamily="Segoe UI">
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>